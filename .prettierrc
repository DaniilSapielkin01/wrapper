{
  "extends": ["react-app", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "semi": true,
        "trailingComma": "es5",
        "arrowParens": "avoid",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 2,
        "endOfLine": "auto"
      }
    ]
  }
}
